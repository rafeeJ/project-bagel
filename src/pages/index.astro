---
import Layout from '../layouts/Layout.astro';
import bagelImage from '../assets/bagel.webp';
---

<Layout>
	<main class="landing">
		<div class="scene">
			<div class="bagel-wrapper">
				<img src={bagelImage.src} alt="An everything bagel" class="bagel" />
			</div>
			<div class="shadow"></div>
		</div>

		<div class="text-block">
			<h1 class="title">project bagel</h1>
			<p class="subtitle">loading<span class="dots"></span></p>
		</div>
	</main>
</Layout>

<style>
	.landing {
		width: 100vw;
		height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background: #f4efe6;
		gap: 2.5rem;
	}

	.scene {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.bagel-wrapper {
		animation: float 3s ease-in-out infinite;
	}

	.bagel {
		width: 200px;
		height: 200px;
		object-fit: contain;
		animation: spin 6s linear infinite;
		filter: drop-shadow(0 8px 24px rgba(80, 50, 20, 0.2));
	}

	.shadow {
		width: 120px;
		height: 14px;
		border-radius: 50%;
		background: radial-gradient(
			ellipse,
			rgba(80, 50, 20, 0.1) 0%,
			transparent 70%
		);
		margin-top: 1.2rem;
		animation: shadow-pulse 3s ease-in-out infinite;
	}

	.text-block {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		animation: fade-in 1s ease-out 0.2s both;
	}

	.title {
		font-family: Georgia, 'Times New Roman', serif;
		font-weight: normal;
		font-size: 2rem;
		letter-spacing: 0.03em;
		color: #3a2a18;
	}

	.subtitle {
		font-family: Georgia, 'Times New Roman', serif;
		font-size: 0.85rem;
		letter-spacing: 0.1em;
		color: #9a8a78;
	}

	.dots::after {
		content: '';
		animation: dots 5s steps(4, end) infinite;
	}

	@keyframes spin {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	@keyframes float {
		0%, 100% { transform: translateY(0); }
		50% { transform: translateY(-10px); }
	}

	@keyframes shadow-pulse {
		0%, 100% { transform: scaleX(1); opacity: 1; }
		50% { transform: scaleX(0.8); opacity: 0.5; }
	}

	@keyframes dots {
		0%   { content: ''; }
		25%  { content: '.'; }
		50%  { content: '..'; }
		75%  { content: '...'; }
		100% { content: ''; }
	}

	@keyframes fade-in {
		from { opacity: 0; transform: translateY(8px); }
		to { opacity: 1; transform: translateY(0); }
	}
</style>
